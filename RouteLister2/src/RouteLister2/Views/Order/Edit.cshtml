@model RouteLister2.Models.Order
<form asp-action="Edit" asp-controller="Order">
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DestinationId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="DestinationId" asp-items="@ViewBag.DestinationDropDown" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OrderStatusId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="OrderStatusId" asp-items="@ViewBag.OrderStatusDropDown" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OrderTypeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="OrderTypeId" asp-items="@ViewBag.OrderTypeDropDown" class="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TotalProductCount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <p>@Model.TotalProductCount</p>
            </div>
        </div>
        <div class="form-group hidden">
                <label asp-for="RouteListId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="RouteListId" class="form-control" />
                </div>
            </div>

        <div class="form-group hidden">
            <label asp-for="Id" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Id">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>