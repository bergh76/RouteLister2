@model RouteLister2.Models.RouteListerViewModels.RouteListViewModel

@if (Model != null)
{
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <span class="h3"><i class="fa fa-list-ol"></i> @Model.Title <span class="pull-right" id="clock"></span></span>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <!-- start accordion -->
                <section class="accordion" id="accordion" role="tablist" aria-multiselectable="true">
                    @if (Model != null)
                {
                        @if (Model.Orders != null)
                        {
                            @for (int i = 0; i < Model.Orders.Count; i++)
                        {
                                <div class="panel">

                                    @Html.Partial("_Order", Model.Orders[i])
                                </div>
                            }
                        }
                    }
                </section>
                <!-- end of accordion -->
            </div>
        </div>
    </div>
}

<div id="loadingDiv" class="hidden"></div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_SignalRScriptsPartial"); }
    <script type="text/javascript">

        $(document).ready(function () {
            $(".slideThree > input").click(function (event) {
                routeLister.orderRow.server(event);
            });
            $(".status-text").click(function (event) {
                console.log("teeest");
                routeLister.setConnectionStatus.client(false);
            });

            //external.startTime();
        });
    </script>
}