@model RouteLister2.Models.RouteList
<form asp-action="Edit" asp-controller="RouteList">
    <div class="form-horizontal">
        <h4>RouteList</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="VehicleId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="VehicleId" asp-items="@ViewBag.VehicleDropDown" class="form-control"></select>
            </div>
        </div>

        <div class="form-group hidden">
            <label asp-for="Id" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Id" class="form-control hidden" readonly="readonly">
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@if (Model.Orders != null)
{
    @for (int i = 0; i < Model.Orders.Count; i++)
    {
        @Html.EditorFor(x => x.Orders[i])
    }
}
else
{
    <p>
        Det finns inga ordrar, för att skapa en ny klicka
        <a href="@Url.Action("Create", "Order", new { id=Model.Id })">här</a>
    </p>
}

