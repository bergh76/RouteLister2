@model RouteLister2.Models.Vehicle

@{
    ViewData["Title"] = "Create";
}



<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Fordon</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="RegistrationNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


